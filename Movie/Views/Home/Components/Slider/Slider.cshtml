@model List<Genres>
<div id="carouselExampleControls" class="carousel slide" data-interval="false" data-ride="carousel">
    <div class="carousel-inner carousel-inner-slider">
        @for (int genres = 0; genres < Model.Count();)
        {
            <div class="carousel-item @(genres.Equals(0) ? "active" : "")">
                <div class="row slider-item">
                    @for (int i = genres; (genres%4!=0 || genres.Equals(0) || i==genres ) && ( genres<Model.Count() ); genres++)
                    {
                        <div class="col-6 col-sm-3">
                            <a asp-action="ShowAll" asp-route-genreId="@Model[genres].Id" asp-route-type="@(ViewContext.RouteData.Values["action"])" asp-route-header="@Model[genres].Name" asp-route-page="1" target="_blank">
                                <div class="slider-image"></div>
                                <img class="d-block w-100" src="https://image.tmdb.org/t/p/w500_and_h282_face/@Model[genres].Image" alt="First slide">
                                <h4>@Model[genres].Name</h4>
                            </a>
                        </div>                  
                    }
                </div>
            </div>
        }
    </div>

    <a class="carousel-control-prev carousel-control-slider" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next carousel-control-slider" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>