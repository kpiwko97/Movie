@model List<Results>

<div id="carouselGetPopular" class="carousel slide carousel-fade" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselGetPopular" data-slide-to="0" class="active"></li>
        @for (int i = 1; i <= Model.Count; i++)
        {
            <li data-target="#carouselGetPopular" data-slide-to="@i"></li>
        }
    </ol>
        <div class="carousel-inner carousel-inner-top">
            <div class="carousel-item active">
                <img class="w-100 " src="https://image.tmdb.org/t/p/original/@Model.Select(i => i.Backdrop_path).FirstOrDefault()">
            </div>
            @foreach (var m in Model)
             {
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://image.tmdb.org/t/p/original/@m.Backdrop_path">
                    <div class="carousel-info carousel-info-top">
                        <h2>@m.Title</h2>
                        <p id="carouselParagraph">@(m.Overview.Length < 200 ? m.Overview : m.Overview.Substring(0, m.Overview.IndexOf('.', 100)))czytaj więcej </p>
                    </div>
                </div>
             }
        </div>
        <a class="carousel-control-prev carousel-control-prev-top" href="#carouselGetPopular" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon " aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next carousel-control-next-top" href="#carouselGetPopular" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
</div>